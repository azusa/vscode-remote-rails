{
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "workbench.colorCustomizations": {
        "activityBar.foreground": "#CECC67",
        "activityBar.background": "#000000",
        "activityBar.inactiveForeground": "#643D00",
        "activityBarBadge.foreground": "#000000",
        "activityBarBadge.background": "#6BD73F",
        "statusBar.foreground": "#98FFD6",
        "statusBar.background": "#0E8354",
        "statusBarItem.hoverBackground": "#175756",
        "statusBarItem.remoteForeground": "#C4E9FF",
        "statusBarItem.remoteBackground": "#226C96",
        "statusBar.debuggingForeground": "#000000",
        "statusBar.debuggingBackground": "#44B98B"
    },
    "ruby.useBundler": true, //run non-lint commands with bundle exec
    "ruby.useLanguageServer": true // use the internal language server (see below)
}